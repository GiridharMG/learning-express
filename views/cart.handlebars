{{#if hasCartItems}}
<div class="col-md-10 offset-md-1">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Delete from cart</th>
            </tr>
        </thead>
        {{#each cartItems}}
        <tbody>
            <tr>
                <td>{{this.productName}}</td>
                <td>{{this.price}}</td>
                <td><a class="btn btn-primary" href="./cart/delete/{{this.productName}}" role="button">Delete</a></td>
            </tr>
        </tbody>
        {{/each}}
    </table>
</div>
<div>
    <a class="btn btn-primary ml-auto" href="./check-out/{{email}}" role="button">Check Out</a>
</div>
{{else}}
<div>
    <h1>No Product In Cart</h1>
</div>
{{/if}}