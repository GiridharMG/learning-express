    <form action="./edit" method="POST">
        <div class="form-group">
            <input type="text" hidden class="form-control" name="name" id="name" value="{{element.name}}">
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input type="text" class="form-control" name="price" id="price" value="{{element.price}}">
        </div>
        <div class="form-group">
            <label for="category">Category</label>
            <input type="text" class="form-control" name="category" id="category" value="{{element.category}}">
        </div>
        <div class="form-group">
            <label for="company">Company</label>
            <input type="text" class="form-control" name="company" id="company" value="{{element.company}}">
